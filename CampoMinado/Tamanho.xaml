<Window x:Class="CampoMinado.Tamanho"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CampoMinado"
        mc:Ignorable="d"
        Title="Campo Minado" Height="300" Width="300" Background="#babaca">
    <Grid>
        <Button Name="TamanhoP" Height="30" Width="60" Click="tamanhoP_Click" Margin="0,0,0,170" Background="#ccccdc">9x9</Button>
        <Button Name="TamanhoM" Height="30" Width="60" Click="tamanhoM_Click" Margin="0,60,0,130" Background="#ccccdc">16x16</Button>
        <Button Name="TamanhoG" Height="30" Width="60" Click="tamanhoG_Click" Margin="0,120,0,90" Background="#ccccdc">16x30</Button>
        <Button Name="Custom" Height="30" Width="90" Click="custom_Click" Margin="0,180,0,0" Background="#ccccdc">Customizado</Button>
    </Grid>
</Window>
