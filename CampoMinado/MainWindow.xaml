<Window x:Class="CampoMinado.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CampoMinado"
        mc:Ignorable="d"
        Title="MainWindow" Loaded="timer" Name="mainWindow">
    <Grid>
        <Grid Name="topo" Grid.Row="0" Grid.Column="0" Background="#babaca" VerticalAlignment="Top">
            <Button Name="sun_button" HorizontalAlignment="Center" VerticalAlignment="Top" Click="sun_Click" Margin="0,0,20,0">
            </Button>
            <TextBlock Name="flags_textB" FontSize="30" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBlock Name="time_textB" FontSize="30" Text="000" Margin="0,0,30,0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        </Grid>
        <Grid Name="campo_grid" Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
